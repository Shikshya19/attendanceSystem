@model AttendanceSystem.ViewModel.StudentRegistrationViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>StudentRegistration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Group</label>
                @Html.DropDownListFor(x => x.GroupId, Model.GroupData,new { @class = "form-control"})
                <span asp-validation-for="GroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Level</label>
                @Html.DropDownListFor(x => x.LevelId, Model.LevelData,new { @class = "form-control"})
                <span asp-validation-for="LevelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
