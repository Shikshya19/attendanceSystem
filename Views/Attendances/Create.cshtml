

@{
    ViewData["Title"] = "Attendance";
}
<script src="~/js/angularjs.js"></script>
<script src="~/js/attendance/attendancecreate.js"></script>
<h1>Attendance</h1>

<hr />
<div ng-app="AttendanceForm" ng-controller="AttendanceController">
    <div class="row">
    <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Date</label>
                <input ng-model="Date" class="form-control" type = "date"/>
                
            </div>
            <div class="form-group">
                <label class="control-label">Group</label>
                <div class="form-group">
                    <select class="form-control"
                                        ng-options="item as item.label for item in items track by item.id" ng-model="selected"></select>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Level</label>
                <div class="form-group">
                    <select class="form-control"
                                        ng-options="item as item.label for item in items track by item.id" ng-model="selected"></select>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Subject</label>
                <div class="form-group">
                    <select class="form-control"
                                        ng-options="item as item.label for item in items track by item.id" ng-model="selected"></select>
                </div>
            </div>
            <div class="form-group">
                <input type="button" ng-click="onClickSubmitBtn()" value="Save" class="btn btn-primary" />
                
            </div>
        
    </div>
</div>



</div>
